#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <conio.h>
#include<math.h>
bool ktnt(int x, int i){
	if(x==i) return true;
	if(x%i==0) return false;
	return ktnt(x, i+1);
}
void snt(int x){
	if(x==1) return;
	if(ktnt(x,2)){
		printf("%d\t", x);
	}
	snt(x-1);
}
int checkNT(int n){
	if(n<2) return 0;
	else{
		for(int i=2;i<n;i++){
			if(n%i==0) return 0;
		}
		return 1;
	}
}
void So_NT(int n){
	for(int i=0;i<=n;i++){
		if(checkNT(i)==1){
			printf("%d\t", i);
		}
	}
}


int main(){
	int n;
	int chon;
	do{
		printf("1. Nhap vao so nguyen duong n\n");
		printf("2. In ra tat ca cac so nguyen to nho hon n dung vong lap\n");
		printf("3. In ra tat ca cac so nguyen to nho hon n dung de quy\n");
		printf("4. Thoat\n");
		printf("Moi ban chon: ");
		scanf("%d", &chon);
		switch(chon){
			case 1: 
				printf("Nhap vao n: ");
				scanf("%d", &n);
				break;
			case 2: 
				So_NT(n);
				break;
			case 3:
				snt(n);
				break;
			case 4: 
				return 0;
			default:
				break;	
			}
		
	}while(1);
}
